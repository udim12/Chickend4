<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/RelativeLayout_Layout"
    android:background="@color/maincolor"
    >
    <Button
        android:id="@+id/start_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/start_game_button_text"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />

    <Button
        android:id="@+id/instruction_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_btn"
        android:layout_centerInParent="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:text="@string/game_instructions_button_text"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/mother_chicken_start"
        android:layout_width="220dp"
        android:layout_height="200dp"
        android:background="@drawable/mother_chicken_picture"
        android:layout_above="@+id/instruction_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:rotationY="-15"

        />
    <ImageView
        android:id="@+id/chick_chicken_start"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:background="@drawable/chick_picture"
        android:layout_below="@+id/start_btn"
        android:rotation="340"
        android:rotationY="45"
        />
    <ImageView
        android:id="@+id/regular_chicken_start"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:background="@drawable/regular_chicken_picture"
        android:layout_alignTop="@+id/start_btn"
        android:layout_toEndOf="@+id/start_btn"
        android:rotation="30"
        android:rotationY="-30"
        />

</RelativeLayout>